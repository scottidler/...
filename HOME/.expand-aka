#!/bin/zsh

expand-aka-space() {
    if [ ! -f ~/aka-killswitch ]; then
        OUTPUT=$(aka query "$BUFFER")
        RC=$?
        if [ $RC -ne 0 ]; then
            echo "RC=$RC"
        fi
        if [ -n "$OUTPUT" ]; then
            BUFFER="$OUTPUT"
            CURSOR=$(expr length "$BUFFER")
        else
            zle self-insert
        fi
    else
        zle self-insert
    fi
}

expand-aka-accept-line() {
    if [ ! -f ~/aka-killswitch ]; then
        OUTPUT=$(aka --eol query "$BUFFER")
        RC=$?
        if [ $RC -ne 0 ]; then
            echo "RC=$RC"
        fi
        if [ -n "$OUTPUT" ]; then
            BUFFER="$OUTPUT"
            CURSOR=$(expr length "$BUFFER")
        fi
        zle .accept-line
    else
        zle .accept-line
    fi
}

zle -N expand-aka-space
zle -N accept-line expand-aka-accept-line

bindkey " " expand-aka-space
bindkey -M isearch " " magic-space

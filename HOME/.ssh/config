    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/home/id_ed25519
    IdentitiesOnly yes
    User git

Host github.com-work
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/work/id_ed25519
    IdentitiesOnly yes
    User git

Host *.lan *.wan *.localdomain
    IdentityFile ~/.ssh/identities/home/id_ed25519
    ForwardAgent yes
    ForwardX11 yes

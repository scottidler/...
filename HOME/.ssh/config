ServerAliveInterval 55

Host desk.lan
    HostName desk.lan

# Configuration for work repositories
Match Host github.com exec "echo %d | grep -q '/repos/tatari-tv'"
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/work/id_ed25519
    IdentitiesOnly yes
    User git

# Default GitHub configuration for personal repositories
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/identities/home/id_ed25519


ServerAliveInterval 55

Host puppet*.private.*.mozilla.com
    ControlMaster auto
    ControlPersist 8h
    ControlPath ~/.ssh//%r@%h:%p

Host *.mozilla.com *.allizom.com *.mozilla.org *.allizom.org
    IdentityFile ~/.ssh/identities/work/id_rsa
    ForwardAgent yes
    User sidler

Host github.com
    IdentityFile ~/.ssh/identities/home/id_rsa
    ForwardAgent yes
    User sidler

Host 10.0.0.*
    IdentityFile ~/.ssh/identities/home/id_rsa
    ForwardAgent yes
    User sidler

Host *.lan *.wan
    IdentityFile ~/.ssh/identities/home/id_rsa
    ForwardAgent yes
    User sidler

ServerAliveInterval 55

Host puppet*.private.*.mozilla.com
    ControlMaster auto
    ControlPersist 8h
    ControlPath ~/.ssh//%r@%h:%p

Host *.mozilla.com *.allizom.com *.mozilla.org *.allizom.org
    IdentityFile ~/.ssh/identities/work/id_rsa
    ForwardAgent yes
    User sidler

Host github.com-work
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/work/id_rsa
    IdentitiesOnly yes
    User git

Host github.com-home
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/home/id_rsa
    IdentitiesOnly yes
    User git

Host github.com
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/identities/home/id_rsa
    IdentitiesOnly yes
    User git

Host 10.0.0.* 192.168.1.*
    IdentityFile ~/.ssh/identities/home/id_rsa
    ForwardAgent yes
    ForwardX11 yes
    User sidler

Host *.lan *.wan *.localdomain
    IdentityFile ~/.ssh/identities/home/id_rsa
    ForwardAgent yes
    ForwardX11 yes
    User sidler

#!/bin/bash

this="$0"
args=("$@")
vim=/usr/bin/vim

for arg in "${args[@]}"; do
    if [[ "$arg" == "-"* ]]; then
        exec $vim "${args[@]}"
    fi
done

case ${#args[@]} in
    [0-1])  exec $vim    "${args[@]}";;
    [2-3])  exec $vim -O "${args[@]}";;
    *)      exec $vim -o "${args[@]}";;
esac

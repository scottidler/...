#!/bin/bash
if [ -n "$DEBUG" ]; then
    PS4=':${LINENO}+'
    set -x
fi
ARGS="$@"
sudo pkill openvpn
find ~/.openvpn/ -name *.ovpn |
while read FILEPATH; do
    DIR=`dirname $FILEPATH`
    CFG=`basename $FILEPATH`
    CMD="(cd $DIR && sudo openvpn --config $CFG $ARGS) &"
    echo "$CMD"
    eval "$CMD"
done
